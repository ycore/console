{
    "name": "ycore/console",
    "description": "A super-slim console component for creating testable command line interfaces, with DI, Facades and a Logger",
    "keywords": ["command", "console", "facades", "logger", "testing"],
    "license": "MIT",
    "authors": [
        {
            "name": "Johan Meyer",
            "email": "y-core@outlook.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/container": "^8.0",
        "symfony/console": "^5.0",
        "symfony/process": "^5.0",
        "psr/log": "^1.1"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Console\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
